@model MedShare.Models.Instituicao
@{
    ViewData["Title"] = "Cadastro Pessoa Jurídica - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }
        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }
        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }
        .form-floating .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 800px; width: 100%;">
            <!-- Header Section -->
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">O compartilhamento é indicado em casos de suspeita de sobras</p>
                <div class="badge bg-success fs-6 px-3 py-2 mt-2">
                    <i class="bi bi-building me-2"></i>CADASTRO INSTITUICAO
                </div>
            </div>
            
            <!-- Form Section -->
            <form asp-controller="Cadastro" asp-action="CreateInstituicao" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                
                <!-- Company Information -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-building-fill me-2"></i>Dados da Empresa</h5>
                    </div>
                    <div class="col-12 mb-3">
                        <div class="form-floating">
                            <input asp-for="InstituicaoNome" type="text" class="form-control" id="floatingRazao" placeholder="Razão Social" required />
                            <label for="floatingRazao">Razão Social</label>
                            <span asp-validation-for="InstituicaoNome" class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="InstituicaoCNPJ" type="text" class="form-control" id="floatingCNPJ" placeholder="CNPJ" required maxlength="18" />
                            <label for="floatingCNPJ">CNPJ</label>
                            <span asp-validation-for="InstituicaoCNPJ" class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="InstituicaoEmail" type="email" class="form-control" id="floatingEmailCorp" placeholder="email@empresa.com" required />
                            <label for="floatingEmailCorp">Email Corporativo</label>
                            <span asp-validation-for="InstituicaoEmail" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <!-- Address Information -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-geo-alt-fill me-2"></i>Endereço da Empresa</h5>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-floating">
                            <input type="text" name="CEP" class="form-control" id="floatingCEPInst" placeholder="CEP" maxlength="9" />
                            <label for="floatingCEPInst">CEP</label>
                        </div>
                    </div>
                    <div class="col-md-8 mb-3">
                        <div class="form-floating">
                            <input asp-for="InstituicaoEndereco" type="text" class="form-control" id="floatingEnderecoInst" placeholder="Endereço" required />
                            <label for="floatingEnderecoInst">Endereço Completo</label>
                            <span asp-validation-for="InstituicaoEndereco" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <!-- Security -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-shield-lock-fill me-2"></i>Segurança</h5>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="InstituicaoSenha" type="password" class="form-control" id="floatingSenhaInst" placeholder="Senha" required />
                            <label for="floatingSenhaInst">Senha</label>
                            <span asp-validation-for="InstituicaoSenha" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <!-- Terms and Conditions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="termsCheckInst" required>
                            <label class="form-check-label" for="termsCheckInst">
                                <i class="bi bi-file-earmark-text me-1"></i>
                                Aceito os <a href="#" class="text-decoration-none">termos de uso</a> e <a href="#" class="text-decoration-none">política de privacidade</a>
                            </label>
                            <div class="invalid-feedback">
                                Você deve aceitar os termos para continuar.
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg fw-bold">
                                <i class="bi bi-floppy me-2"></i>FINALIZAR CADASTRO
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="d-grid">
                            <a href="/Auth/Login" class="btn btn-outline-success btn-lg fw-bold">
                                <i class="bi bi-box-arrow-in-right me-2"></i>JÁ TENHO CONTA
                            </a>
                        </div>
                    </div>
                </div>
            </form>
            
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                    <i class="bi bi-info-circle-fill me-2"></i>@ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>
    
    <!-- Footer -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-success me-1"></i>Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil</div>
                        <div><i class="bi bi-telephone-fill text-success me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-success me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-success me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Máscara para CNPJ
        function formatCNPJ(cnpj) {
            return cnpj.replace(/\D/g, '')
                      .replace(/(\d{2})(\d)/, '$1.$2')
                      .replace(/(\d{3})(\d)/, '$1.$2')
                      .replace(/(\d{3})(\d)/, '$1/$2')
                      .replace(/(\d{4})(\d{1,2})/, '$1-$2')
                      .replace(/(-\d{2})\d+?$/, '$1');
        }
        
        // Máscara para CEP
        function formatCEP(cep) {
            return cep.replace(/\D/g, '')
                     .replace(/(\d{5})(\d)/, '$1-$2')
                     .replace(/(-\d{3})\d+?$/, '$1');
        }
        
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
        
        // Aplicar máscaras
        document.addEventListener('DOMContentLoaded', function() {
            const cnpjInput = document.querySelector('#floatingCNPJ');
            const cepInput = document.querySelector('#floatingCEPInst');
            
            if (cnpjInput) {
                cnpjInput.addEventListener('input', function(e) {
                    e.target.value = formatCNPJ(e.target.value);
                });
            }
            
            if (cepInput) {
                cepInput.addEventListener('input', function(e) {
                    e.target.value = formatCEP(e.target.value);
                });
            }
        });
    </script>
</body>
</html>