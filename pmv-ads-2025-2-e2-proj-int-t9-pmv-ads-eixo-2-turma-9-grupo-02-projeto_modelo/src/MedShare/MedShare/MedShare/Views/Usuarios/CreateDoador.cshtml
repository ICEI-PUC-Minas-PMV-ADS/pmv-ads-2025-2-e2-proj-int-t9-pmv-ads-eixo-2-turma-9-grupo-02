@model MedShare.Models.Doador

@{
    ViewData["Title"] = "Cadastro Pessoa Física - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="theme-color" content="#2956a3" />
    <meta name="mobile-web-app-capable" content="yes" />
    <title>Cadastro Pessoa Física - MedShare</title>
    <link rel="stylesheet" href="~/css/cadastro.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="main-container">
        <div class="left-section">
            <div class="logo-title">
                <div class="logo-placeholder">💊</div>
                <h1>MedShare</h1>
                <p class="subtitle">O compartilhamento é indicado em casos de suspeita de sobras</p>
            </div>
            
            <div class="cadastro-form">
                <div class="tipo-cadastro">
                    <h2 class="form-title active">PESSOA FÍSICA</h2>
                    <a href="/Usuarios/CreateInstituicao" class="tipo-link">PESSOA JURÍDICA</a>
                </div>
                
                <form asp-action="CreateDoador" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>
                    
                    <input asp-for="DoadorNome" type="text" placeholder="NOME COMPLETO" required />
                    <span asp-validation-for="DoadorNome" class="text-danger validation-error"></span>
                    
                    <input asp-for="DoadorCPF" type="text" placeholder="CPF" required />
                    <span asp-validation-for="DoadorCPF" class="text-danger validation-error"></span>
                    
                    <input asp-for="DoadorEmail" type="email" placeholder="EMAIL" required />
                    <span asp-validation-for="DoadorEmail" class="text-danger validation-error"></span>
                    
                    <input type="text" id="cep" name="CEP" placeholder="CEP" />
                    
                    <input type="text" id="endereco" name="Endereco" placeholder="ENDEREÇO" />
                    
                    <input asp-for="DoadorSenha" type="password" placeholder="SENHA" required />
                    <span asp-validation-for="DoadorSenha" class="text-danger validation-error"></span>
                    
                    <div class="checkbox-container">
                        <input type="checkbox" id="termos" name="aceitarTermos" required />
                        <label for="termos" class="checkbox-label">Aceitar termos de uso</label>
                    </div>
                    
                    <div class="buttons">
                        <button type="submit" class="salvar-btn">SALVAR</button>
                        <a href="/Usuarios/Login" class="entrar-btn">ENTRAR</a>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="right-section">
            <div class="meds-img">
                <div class="meds-placeholder">
                    <div class="med-pills">💊💊💊</div>
                    <div class="med-pills">🧪⚗️🩺</div>
                    <div class="med-pills">💉🔬💊</div>
                </div>
            </div>
        </div>
    </div>
    
    <footer>
        <div class="footer-gradient"></div>
        <div class="footer-content">
            <div class="footer-info">
                <span>📍 Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil</span><br />
                <span>📞 Telefone: (31) 3319-4444</span><br />
                <span>📧 E-mail: contato@medshare.com</span>
            </div>
            <div class="footer-about">
                <span class="about-icon">ℹ️</span>
                <span>SOBRE NÓS</span>
            </div>
        </div>
    </footer>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
