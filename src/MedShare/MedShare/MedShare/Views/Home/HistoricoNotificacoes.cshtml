@model IEnumerable<MedShare.Models.Notificacao>
@{
    ViewData["Title"] = "Histórico de Notificações - MedShare";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }
        .main-box-notificacoes {
            background: #fff;
            border-radius: 24px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.10);
            max-width: 1100px;
            margin: 48px auto 32px auto;
            padding: 40px 32px 32px 32px;
        }
        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }
        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }
        .badge-custom {
            background: #0d6efd;
            color: #fff;
            font-size: 1rem;
            padding: 0.6em 1em;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }
        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }
        .main-box-notificacoes .list-group-item {
            border-radius: 10px;
            margin-bottom: 12px;
            border: 1px solid #eee;
            box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        }
        .main-box-notificacoes .btn {
            min-width: 120px;
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="main-box-notificacoes p-5 w-100">
            <!-- Header -->
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">Acompanhe o histórico das suas notificações importantes!</p>
                <div class="badge-custom">
                    <i class="bi bi-bell"></i>
                    HISTÓRICO DE NOTIFICAÇÕES
                </div>
            </div>
            <!-- Botão Voltar -->
            <div class="mb-4">
                <a href="/Home/HomePageDoador" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                </a>
            </div>
            <!-- Lista de notificações -->
            @if (!Model.Any())
            {
                <div class="alert alert-info">Nenhuma notificação encontrada.</div>
            }
            else
            {
                <div class="list-group mb-3">
                    @foreach (var n in Model)
                    {
                        <div class="list-group-item">
                            <strong>@n.Mensagem</strong><br />
                            <small>@n.DataCriacao.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
    <!-- Rodapé -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
