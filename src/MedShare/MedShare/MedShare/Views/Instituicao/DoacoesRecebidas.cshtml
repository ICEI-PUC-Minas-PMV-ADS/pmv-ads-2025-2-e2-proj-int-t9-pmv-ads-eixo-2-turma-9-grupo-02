@model IEnumerable<MedShare.Models.Doacao>

@{
    ViewData["Title"] = "Doações Recebidas - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        } 

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .badge-custom {
            background: #0d6efd;
            color: #fff;
            font-size: 1rem;
            padding: 0.6em 1em;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        .mt-custom {
            margin-top: 2rem !important;
            margin-bottom: 2rem !important;
        }

        .btn-outline-primary.rounded-circle {
            width: 40px;
            height: 43px;
            align-items: center;
            justify-content: center;
            border-radius: 10px !important;
        }

        .btn-home-icon {
            width: 45px;
            height: 45px;
            align-items: center;
            justify-content: center;
            padding: 0;
            border-radius: 10px;
        }

            .btn-home-icon i {
                font-size: 28px !important;
                margin-right: 0 !important;
            }

        .btn i {
            vertical-align: middle;
        }

        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .status-badge {
            padding: 0.45em 0.8em;
            border-radius: 8px;
            font-weight: 600;
        }

        .status-pendente {
            background: #ffc107;
            color: #000;
        }

        .status-aprovado {
            background: #7ab949;
            color: #fff;
        }

        .status-rejeitado {
            background: #dc3545;
            color: #fff;
        }

        .status-finalizado {
            background: #0d6efd;
            color: #fff;
        }

        .btn-aprovar {
            background-color: #75b948 !important;
            border-color: #75b948 !important;
            color: #fff !important;
        }

            .btn-aprovar:hover {
                background-color: #75b948 !important;
            }

        .btn-rejeitar {
            background-color: #f53d40 !important;
            border-color: #f53d40 !important;
            color: #fff !important;
        }

            .btn-rejeitar:hover {
                background-color: #f53d40 !important;
            }

    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 1100px; width: 100%;">

            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">Gerencie e processe doações recebidas de forma segura!</p>

                <div class="d-flex justify-content-center align-items-center gap-3 mt-custom">
                    <div class="badge-custom">
                        <i class="bi bi-box-seam"></i>
                        DOAÇÕES RECEBIDAS
                    </div>

                    <a asp-controller="Home" asp-action="HomePageInstituicao"
                       class="btn btn-outline-primary btn-sm fw-bold btn-home-icon" title="Página Inicial">
                        <i class="bi bi-house-door-fill"></i>
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle text-center">
                    <thead>
                        <tr>
                            <th>Medicamento</th>
                            <th>Validade</th>
                            <th>Quantidade</th>
                            <th>Foto</th>
                            <th>Receita</th>
                            <th>Doador</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NomeDoacao</td>
                                <td>@(item.ValidadeDoacao.HasValue? item.ValidadeDoacao.Value.ToString("dd/MM/yyyy") : "-")</td>
                                <td>@item.QuantidadeDoacao</td>

                                <td>
                                    @if (!string.IsNullOrEmpty(item.CaminhoFoto))
                                    {
                                        <img src="@item.CaminhoFoto" style="max-width: 70px; border-radius: 8px; box-shadow: 0 0 4px rgba(0,0,0,0.2);" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem foto</span>
                                    }
                                </td>

                                <td>
                                    @if (!string.IsNullOrEmpty(item.CaminhoReceita))
                                    {
                                        <a href="@item.CaminhoReceita" target="_blank" class="btn btn-outline-primary btn-sm">
                                            Ver Arquivo
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem arquivo</span>
                                    }
                                </td>

                                <td>
                                    <div class="small text-muted">@item.Doador?.DoadorNome</div>
                                    <div class="small text-muted">@item.Doador?.DoadorEmail</div>
                                </td>

                            <td>
                                <span class="status-badge
                                               @(item.Status == MedShare.Models.StatusDoacao.Pendente ? "status-pendente" :
                                                item.Status == MedShare.Models.StatusDoacao.Aprovado ? "status-aprovado" :
                                                item.Status == MedShare.Models.StatusDoacao.Rejeitado ? "status-rejeitado" :
                                                item.Status == MedShare.Models.StatusDoacao.Finalizado ? "status-finalizado" : "")">
                                    @item.Status
                                </span>
                            </td>

                                <td>
                                    @if (item.Status == MedShare.Models.StatusDoacao.Pendente)
                                    {
                                        <form method="post" asp-action="AlterarStatus" style="display:inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="Aprovado" />
                                            <button class="btn btn-aprovar btn-sm" title="Aprovar"><i class="bi bi-check-circle"></i></button>
                                        </form>

                                        <form method="post" asp-action="AlterarStatus" style="display:inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="Rejeitado" />
                                            <button class="btn btn-rejeitar btn-sm" title="Rejeitar"><i class="bi bi-x-circle"></i></button>
                                        </form>
                                    }
                                    else if (item.Status == MedShare.Models.StatusDoacao.Aprovado)
                                    {
                                        <form method="post" asp-action="AlterarStatus" style="display:inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="Finalizado" />
                                            <button class="btn btn-success btn-sm" title="Finalizar"><i class="bi bi-check-lg"></i></button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem ações</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
