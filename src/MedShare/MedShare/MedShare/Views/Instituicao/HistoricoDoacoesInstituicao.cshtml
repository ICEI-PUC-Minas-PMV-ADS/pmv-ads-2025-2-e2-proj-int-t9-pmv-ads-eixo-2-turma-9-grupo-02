@model IEnumerable<MedShare.Models.Doacao>
@{
    ViewData["Title"] = "Histórico de Doações - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        .badge-custom {
            background: #0d6efd;
            color: #fff;
            font-size: 1rem;
            padding: 0.6em 1em;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        .mt-custom {
            margin-top: 2rem !important;
            margin-bottom: 2rem !important;
        }

        .btn-home-icon {
            width: 45px;
            height: 45px;
            align-items: center;
            justify-content: center;
            padding: 0;
            border-radius: 10px;
        }

            .btn-home-icon i {
                font-size: 28px !important;
            }

        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .status-badge {
            padding: 0.45em 0.8em;
            border-radius: 8px;
            font-weight: 600;
        }

        .status-rejeitado {
            background: #dc3545;
            color: #fff;
        }

        .status-finalizado {
            background: #0d6efd;
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 1100px; width: 100%;">

            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">Doações finalizadas ou rejeitadas registradas para controle!</p>

                <div class="d-flex justify-content-center align-items-center gap-3 mt-custom">
                    <div class="badge-custom">
                        <i class="bi bi-archive"></i>
                        HISTÓRICO DE DOAÇÕES
                    </div>

                    <a asp-controller="Home" asp-action="HomePageInstituicao"
                       class="btn btn-outline-primary btn-sm fw-bold btn-home-icon" title="Página Inicial">
                        <i class="bi bi-house-door-fill"></i>
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle text-center">
                    <thead>
                        <tr>
                            <th>Medicamento</th>
                            <th>Validade</th>
                            <th>Quantidade</th>
                            <th>Doador</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NomeDoacao</td>
                                <td>@(item.ValidadeDoacao.HasValue? item.ValidadeDoacao.Value.ToString("dd/MM/yyyy") : "-")</td>
                                <td>@item.QuantidadeDoacao</td>
                                <td>@item.Doador?.DoadorNome</td>

                                <td>
                                    @if (item.Status == MedShare.Models.StatusDoacao.Rejeitado)
                                    {
                                        <span class="status-badge status-rejeitado">Rejeitado</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-finalizado">Finalizado</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <footer class="mt-auto">
        <div class="footer-gradient"></div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>