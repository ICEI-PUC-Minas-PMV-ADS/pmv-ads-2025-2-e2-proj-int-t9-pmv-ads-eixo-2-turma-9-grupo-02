@model MedShare.Models.Usuario

@{
    ViewData["Title"] = "Login - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0d6efd" />
    <title>Login - MedShare</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }
        .login-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }
        .app-title {
            color: #0d6efd;
            font-weight: 700;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }
        .medicine-floating {
            animation: float 6s ease-in-out infinite;
        }
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }
        .google-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 2px solid #e9ecef;
            background: white;
            color: #db4437;
        }
        .google-btn:hover {
            border-color: #db4437;
            background: #fff5f5;
        }
        .form-floating .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="login-card" style="max-width: 1000px; width: 100%;">
            <div class="row g-0 min-vh-75">
                <!-- Left Section - Login Form -->
                <div class="col-lg-6 p-5 d-flex flex-column justify-content-center">
                    <!-- Logo Section -->
                    <div class="text-center mb-4">
                        <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                        <h1 class="app-title h2 mb-2">MedShare</h1>
                        <p class="text-muted small">
                            @if (ViewBag.UserType == "pf")
                            {
                                <span>Login para <strong>Pessoa Física</strong></span>
                            }
                            else if (ViewBag.UserType == "pj")
                            {
                                <span>Login para <strong>Pessoa Jurídica</strong></span>
                            }
                            else
                            {
                                <span>O compartilhamento é indicado em casos de suspeita de sobras</span>
                            }
                        </p>
                    </div>
                    
                    <!-- Login Form -->
                    <form asp-controller="Auth" asp-action="Login" method="post" class="needs-validation" novalidate>
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.Message
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <!-- Email Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="UsuarioEmail" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required />
                            <label for="floatingEmail"><i class="bi bi-envelope me-2"></i>Email</label>
                            <span asp-validation-for="UsuarioEmail" class="invalid-feedback"></span>
                        </div>
                        
                        <!-- Password Field -->
                        <div class="form-floating mb-3">
                            <input asp-for="UsuarioSenha" type="password" class="form-control" id="floatingPassword" placeholder="Senha" required />
                            <label for="floatingPassword"><i class="bi bi-lock me-2"></i>Senha</label>
                            <span asp-validation-for="UsuarioSenha" class="invalid-feedback"></span>
                        </div>
                        
                        <!-- Profile Selection -->
                        <div class="mb-4">
                            <select id="perfil" name="perfil" class="form-select" required>
                                <option value="">Selecione seu perfil</option>
                                <option value="Usuario">Admin</option>
                                <option value="Doador">Doador</option>
                                <option value="Instituicao">Instituição</option>
                            </select>
                            <div class="invalid-feedback">
                                Por favor, selecione um perfil.
                            </div>
                        </div>
                        
                        <!-- Buttons -->
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <button type="button" class="btn google-btn d-flex align-items-center justify-content-center" onclick="loginWithGoogle()" title="Login com Google">
                                <i class="bi bi-google fs-5"></i>
                            </button>
                            <button type="submit" class="btn btn-primary flex-grow-1 py-2 fw-bold">ENTRAR</button>
                        </div>
                        
                        <!-- Register Button -->
                        <div class="d-grid mb-3">
                            @if (ViewBag.UserType == "pf")
                            {
                                <a href="/Cadastro/CreateDoador" class="btn btn-outline-primary py-2 fw-bold">CADASTRE-SE COMO PESSOA FÍSICA</a>
                            }
                            else if (ViewBag.UserType == "pj")
                            {
                                <a href="/Cadastro/CreateInstituicao" class="btn btn-outline-primary py-2 fw-bold">CADASTRE-SE COMO PESSOA JURÍDICA</a>
                            }
                            else
                            {
                                <a href="/Auth/ChooseTypeRegister" class="btn btn-outline-primary py-2 fw-bold">CADASTRE-SE</a>
                            }
                        </div>
                        
                        <!-- Forgot Password -->
                        <div class="text-center mb-3">
                            <a href="#" class="text-decoration-none text-muted small fw-semibold">ESQUECI MINHA SENHA</a>
                        </div>
                        
                        <!-- Back Link -->
                        <div class="text-center mt-3">
                            <a href="/Auth/ChooseType" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Voltar para Tela Inicial
                            </a>
                        </div>
                    </form>
                </div>
                
                <!-- Right Section - Medicine Image -->
                <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center p-5" style="background: linear-gradient(135deg, #f8f9ff 0%, #e3f2fd 100%);">
                    <img src="~/images/remedios.png" alt="Medicamentos" class="img-fluid medicine-floating" style="max-width: 350px; border-radius: 15px;" />
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function loginWithGoogle() {
            // Toast para melhor UX
            const toastHTML = `
                <div class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            Funcionalidade do Google Login será implementada futuramente.
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;
            
            let toastContainer = document.getElementById('toast-container');
            if (!toastContainer) {
                toastContainer = document.createElement('div');
                toastContainer.id = 'toast-container';
                toastContainer.className = 'toast-container position-fixed top-0 end-0 p-3';
                toastContainer.style.zIndex = '11';
                document.body.appendChild(toastContainer);
            }
            
            toastContainer.innerHTML = toastHTML;
            const toastElement = toastContainer.querySelector('.toast');
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
        }

        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>

@* Página de login para todos os perfis de usuário. *@