@model IEnumerable<MedShare.Models.MedicamentoInstituicao>
@{
    ViewData["Title"] = "Escassez Crítica";
}
<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill text-danger"></i> Escassez Crítica (menos de 11 caixas)</h5>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary"><i class="bi bi-arrow-left"></i> Voltar</a>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-success mb-0">Nenhum medicamento em escassez crítica.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th class="text-center">Qtd.</th>
                            <th>Observação</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-danger">
                            <td>@item.Nome</td>
                            <td class="text-center fw-bold">@item.QuantidadeCaixas</td>
                            <td>@item.Observacao</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
@section Scripts { }
