@model IEnumerable<MedShare.Models.MedicamentoInstituicao>
@{
    ViewData["Title"] = "Escassez Crítica";
}
<h2>Medicamentos em Escassez Crítica (menos de 11 caixas)</h2>
<p><a asp-action="Index" class="btn btn-secondary">Voltar</a></p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Observação</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr class="table-danger">
            <td>@item.Nome</td>
            <td>@item.QuantidadeCaixas</td>
            <td>@item.Observacao</td>
        </tr>
    }
    </tbody>
</table>
