@model MedShare.Models.MedicamentoInstituicao
@{
    ViewData["Title"] = "Excluir Medicamento";
}
<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="bi bi-trash"></i> Excluir Medicamento</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning"><i class="bi bi-exclamation-triangle"></i> Tem certeza que deseja excluir este medicamento?</div>
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>
            <dt class="col-sm-3">Quantidade</dt>
            <dd class="col-sm-9">@Model.QuantidadeCaixas</dd>
        </dl>
        <form asp-action="Delete" class="mt-3 d-flex justify-content-between">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Excluir</button>
        </form>
    </div>
</div>
