@model MedShare.Models.MedicamentoInstituicao
@{
    ViewData["Title"] = "Excluir Medicamento";
}
<h2>Excluir Medicamento</h2>
<div>
    <h4>Tem certeza que deseja excluir?</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Quantidade</dt>
        <dd class="col-sm-10">@Model.QuantidadeCaixas</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
