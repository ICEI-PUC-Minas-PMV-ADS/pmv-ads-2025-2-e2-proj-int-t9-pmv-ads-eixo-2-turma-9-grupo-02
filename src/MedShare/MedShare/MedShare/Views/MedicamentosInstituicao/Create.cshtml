@model MedShare.Models.MedicamentoInstituicao
@{
    ViewData["Title"] = "Novo Medicamento";
}
<h2>Novo Medicamento</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="QuantidadeCaixas" class="form-label"></label>
        <input asp-for="QuantidadeCaixas" class="form-control" />
        <span asp-validation-for="QuantidadeCaixas" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Observacao" class="form-label"></label>
        <textarea asp-for="Observacao" class="form-control"></textarea>
        <span asp-validation-for="Observacao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {<partial name="_ValidationScriptsPartial" />}
