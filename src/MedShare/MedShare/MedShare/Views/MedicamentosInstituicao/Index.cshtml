@model IEnumerable<MedShare.Models.MedicamentoInstituicao>
@{
    ViewData["Title"] = "Medicamentos";
}
<div class="card shadow-sm mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-capsule"></i> Estoque de Medicamentos</h5>
        <div>
            <a asp-action="Create" class="btn btn-sm btn-success"><i class="bi bi-plus-lg"></i> Novo</a>
            <a asp-action="Escassez" class="btn btn-sm btn-warning"><i class="bi bi-exclamation-triangle"></i> Escassez Crítica</a>
        </div>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">Nenhum medicamento cadastrado ainda.</div>
        }
        else
        {
            var total = Model.Count;
            var criticos = Model.Count(m => m.EscassezCritica);
            var faltando = Model.Count(m => m.EmFalta);
            <div class="row g-3 mb-3">
                <div class="col-auto"><span class="badge bg-primary">Total: @total</span></div>
                <div class="col-auto"><span class="badge bg-danger">Críticos: @criticos</span></div>
                <div class="col-auto"><span class="badge bg-dark">Em falta: @faltando</span></div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th class="text-center">Quantidade</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        string statusClass = item.EscassezCritica ? "bg-danger" : (item.EmFalta ? "bg-secondary" : "bg-success");
                        string statusText = item.EscassezCritica ? "Crítica" : (item.EmFalta ? "Em falta" : "OK");
                        <tr class="@(item.EscassezCritica ? "table-danger" : (item.EmFalta ? "table-secondary" : ""))">
                            <td>@item.Nome</td>
                            <td class="text-center">@item.QuantidadeCaixas</td>
                            <td class="text-center"><span class="badge @statusClass">@statusText</span></td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detalhes"><i class="bi bi-eye"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Editar"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Excluir"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
@section Scripts { }
