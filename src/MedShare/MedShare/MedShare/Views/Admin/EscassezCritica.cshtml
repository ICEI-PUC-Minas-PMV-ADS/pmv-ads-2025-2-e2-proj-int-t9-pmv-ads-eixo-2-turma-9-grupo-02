@model IEnumerable<MedShare.Models.Doacao>
@{
    ViewData["Title"] = "Medicamentos em Escassez Crítica";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Medicamentos em Escassez Crítica</h2>
        @if (!Model.Any())
        {
            <div class="alert alert-success">Nenhum medicamento em escassez crítica no momento.</div>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead class="table-danger">
                    <tr>
                        <th>Nome do Medicamento</th>
                        <th>Validade</th>
                        <th>Quantidade</th>
                        <th>Instituição</th>
                        <th>Descrição</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NomeMedicamento</td>
                        <td>@item.Validade.ToString("dd/MM/yyyy")</td>
                        <td>@item.Quantidade</td>
                        <td>@item.Instituicao?.InstituicaoNome</td>
                        <td>@item.Descricao</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        <a href="/Admin/Dashboard" class="btn btn-secondary mt-3">Voltar ao Painel</a>
    </div>
</body>
</html>
