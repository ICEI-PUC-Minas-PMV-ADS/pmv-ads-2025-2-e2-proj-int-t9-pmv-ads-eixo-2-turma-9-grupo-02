@{
    ViewData["Title"] = "Escolher Perfil - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }
        .main-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .logo-image {
            width: 120px;
            height: 120px;
            object-fit: contain;
        }
        .app-title {
            color: #0d6efd;
            font-weight: 700;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }
        .choice-card {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            transition: all 0.3s ease;
            cursor: pointer;
            height: 140px;
        }
        .choice-card:hover {
            border-color: #0d6efd;
            background: #f8f9ff;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(13, 110, 253, 0.15);
        }
        .choice-card.selected {
            border-color: #0d6efd;
            background: linear-gradient(45deg, #0d6efd, #6610f2);
            color: white;
        }
        .choice-icon {
            font-size: 3rem;
            margin-bottom: 15px;
        }
        .choice-title {
            font-weight: 600;
            font-size: 1.1rem;
        }
        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="main-card p-5" style="max-width: 600px; width: 100%;">
            <!-- Header com logo -->
            <div class="text-center mb-5">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">O compartilhamento é indicado em casos de suspeita de sobras</p>
            </div>
            
            <!-- Título da página -->
            <div class="text-center mb-4">
                <h2 class="text-dark fw-bold">Escolha seu Perfil</h2>
                <p class="text-muted">Selecione o tipo de conta que deseja criar</p>
            </div>
            
            <!-- Formulário -->
            <form id="perfilForm">
                <div class="row g-4 mb-4">
                    <!-- Opção Doador -->
                    <div class="col-md-6">
                        <div class="choice-card d-flex flex-column align-items-center justify-content-center h-100 p-3" 
                             data-perfil="doador" onclick="selectPerfil('doador', this)">
                            <div class="choice-icon">
                                <i class="bi bi-person-heart"></i>
                            </div>
                            <div class="choice-title">DOADOR</div>
                            <small class="text-muted mt-1">Pessoa Física</small>
                        </div>
                    </div>
                    
                    <!-- Opção Instituição -->
                    <div class="col-md-6">
                        <div class="choice-card d-flex flex-column align-items-center justify-content-center h-100 p-3" 
                             data-perfil="instituicao" onclick="selectPerfil('instituicao', this)">
                            <div class="choice-icon">
                                <i class="bi bi-building"></i>
                            </div>
                            <div class="choice-title">INSTITUIÇÃO</div>
                            <small class="text-muted mt-1">Pessoa Jurídica</small>
                        </div>
                    </div>
                </div>
                
                <!-- Botão de avançar -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5 fw-bold" disabled id="avancarBtn">
                        <i class="bi bi-arrow-right me-2"></i>AVANÇAR
                    </button>
                </div>
            </form>
            
            <!-- Link para login -->
            <div class="text-center mt-4">
                <p class="text-muted">Já possui uma conta?</p>
                <a href="/Auth/ChooseType" class="btn btn-outline-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>FAZER LOGIN
                </a>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    <div class="footer-gradient"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let selectedPerfil = '';
        
        function selectPerfil(perfil, element) {
            // Remove seleção anterior
            document.querySelectorAll('.choice-card').forEach(card => {
                card.classList.remove('selected');
            });
            
            // Adiciona seleção atual
            element.classList.add('selected');
            selectedPerfil = perfil;
            
            // Habilita botão
            document.getElementById('avancarBtn').disabled = false;
        }
        
        document.getElementById('perfilForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (selectedPerfil === "doador") {
                window.location.href = "/Cadastro/CreateDoador";
            } else if (selectedPerfil === "instituicao") {
                window.location.href = "/Cadastro/CreateInstituicao";
            }
        });
    </script>
</body>
</html>