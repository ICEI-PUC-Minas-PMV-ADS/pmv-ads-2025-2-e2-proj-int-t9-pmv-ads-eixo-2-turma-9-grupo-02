@model MedShare.Models.EstoqueMedicamento

@{
    ViewData["Title"] = "Editar Medicamento - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

            .btn-success:hover {
                background-color: #218838;
            }
    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 700px; width: 100%;">

            <!-- Header -->
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">Gerenciamento de Estoque de Medicamentos</p>

                <div class="badge bg-warning fs-6 px-3 py-2 mt-2">
                    <i class="bi bi-pencil-square me-2"></i>EDITAR MEDICAMENTO
                </div>
            </div>

            <!-- Formulário -->
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-capsule me-2"></i>Informações do Medicamento</h5>
                    </div>

                    <!-- Nome -->
                    <div class="col-12 mb-3">
                        <label asp-for="NomeMedicamento" class="form-label"></label>
                        <input asp-for="NomeMedicamento" class="form-control" required />
                        <span asp-validation-for="NomeMedicamento" class="invalid-feedback"></span>
                    </div>

                    <!-- Validade -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Validade" class="form-label"></label>
                        <input asp-for="Validade" type="date" class="form-control" required />
                        <span asp-validation-for="Validade" class="invalid-feedback"></span>
                    </div>

                    <!-- Quantidade -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Quantidade" class="form-label"></label>
                        <input asp-for="Quantidade" class="form-control" required />
                        <span asp-validation-for="Quantidade" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Botões -->
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <div class="d-grid">
                            <a asp-action="Index" class="btn btn-outline-primary btn-lg fw-bold">
                                <i class="bi bi-arrow-left-circle me-2"></i>VOLTAR
                            </a>
                        </div>
                    </div>

                    <div class="col-md-6 mb-2">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg fw-bold">
                                <i class="bi bi-save me-2"></i>SALVAR
                            </button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <!-- Rodapé -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Validação Bootstrap
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>