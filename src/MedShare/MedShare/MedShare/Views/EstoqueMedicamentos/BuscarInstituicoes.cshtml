@model IEnumerable<MedShare.Models.Instituicao>

@{
    ViewData["Title"] = "Buscar Instituições - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        /* Tabela */
        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 1100px; width: 100%;">

            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">Encontre instituições próximas de você para doar!</p>

                <div class="badge bg-primary text-light p-2 px-3" style="border-radius:10px;">
                    <i class="bi bi-hospital me-2"></i>BUSCAR INSTITUIÇÕES
                </div>
            </div>

            <div class="mb-3">
                <a href="/Home/HomePageDoador" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead>
                        <tr>
                            <th>Instituição</th>
                            <th>Endereço</th>
                            <th>Em estoque crítico</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var inst in Model)
                        {
                            var criticos = ViewBag.CriticosNomes.ContainsKey(inst.InstituicaoId)
                            ? ViewBag.CriticosNomes[inst.InstituicaoId] as List<MedShare.Models.EstoqueMedicamento>
                            : new List<MedShare.Models.EstoqueMedicamento>();

                            bool temCriticos = criticos != null && criticos.Count > 0;

                            <tr style="@(temCriticos ? "background-color:#f5f5f5;" : "")">
                                <td><strong>@inst.InstituicaoNome</strong></td>
                                <td>@inst.InstituicaoEndereco</td>

                                <td>
                                    @if (temCriticos)
                                    {
                                        <div style="
                                                            background-color: #ffcccc;
                                                            padding: 12px;
                                                            border-radius: 10px;
                                                            font-size: 14px;
                                                            color: #6a0000;
                                                            font-weight: 500;
                                                            text-align: left;
                                                            min-width: 240px;
                                                            display: flex;
                                                            flex-direction: column;
                                                            gap: 5px;
                                                            position: relative;
                                                        ">
                                            @foreach (var med in criticos)
                                            {
                                                <div>@med.NomeMedicamento</div>
                                            }

                                            <i class="bi bi-exclamation-triangle-fill"
                                               style="
                                                                position: absolute;
                                                                right: 10px;
                                                                top: 50%;
                                                                transform: translateY(-50%);
                                                                font-size: 32px;
                                                                color: rgba(217, 48, 37, 0.25);
                                                           ">
                                            </i>
                                        </div>
                                    }
                                    else
                                    {
                                        <div style="
                                                            padding: 12px;
                                                            border-radius: 10px;
                                                            font-size: 14px;
                                                            color: #495057;
                                                            background-color: #e9f7ef;
                                                            text-align: center;
                                                            font-weight: 500;
                                                        ">
                                            Nenhum medicamento está em estoque crítico!
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>

                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
