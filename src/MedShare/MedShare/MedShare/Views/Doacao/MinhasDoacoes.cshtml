@model IEnumerable<MedShare.Models.Doacao>

<h2>Minhas Doações</h2>

<a asp-action="Doar" asp-controller="Doacao" class="btn btn-success mb-3">
    Adicionar nova doação
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome do Medicamento</th>
            <th>Validade</th>
            <th>Quantidade</th>
            <th>Foto</th>
            <th>Receita</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.NomeDoacao</td>
                    <td>@item.ValidadeDoacao.ToShortDateString()</td>
                    <td>@item.QuantidadeDoacao</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.CaminhoFoto))
                        {
                            <img src="@item.CaminhoFoto" alt="Foto da doação" width="80" />
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.CaminhoReceita))
                        {
                            <a href="@item.CaminhoReceita" target="_blank">Ver</a>
                        }
                    </td>
                    <td>@item.Status</td>
                    <td>
                        <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Ver</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Nenhuma doação encontrada.</td>
            </tr>
        }
    </tbody>
</table>
