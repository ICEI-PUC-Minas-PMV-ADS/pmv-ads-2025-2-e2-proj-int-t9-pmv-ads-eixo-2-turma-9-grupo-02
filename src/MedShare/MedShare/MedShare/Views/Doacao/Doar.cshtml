@model MedShare.Models.Doacao

@{
    ViewData["Title"] = "Doar - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .main-container {
            display: flex;
            min-height: 100vh;
            position: relative;
        }
        
        .left-section {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        
        .doacao-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 40px;
            width: 100%;
            max-width: 600px;
        }
        
        .logo-section {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
            margin-bottom: 15px;
        }
        
        .app-title {
            color: #0d6efd;
            font-weight: 700;
            font-size: 2.5rem;
            margin: 0;
        }
        
        .app-subtitle {
            color: #6c757d;
            font-size: 0.9rem;
            margin-top: 5px;
        }
        
        .page-title {
            color: #495057;
            font-weight: 600;
            font-size: 1.8rem;
            text-align: center;
            margin: 30px 0;
            letter-spacing: 1px;
        }
        
        .form-floating .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        
        .form-floating label {
            font-weight: 500;
            color: #6c757d;
        }
        
        .btn-salvar {
            background: linear-gradient(45deg, #28a745, #20c997);
            border: none;
            border-radius: 15px;
            color: white;
            font-weight: 600;
            padding: 15px 40px;
            font-size: 1.1rem;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        
        .btn-salvar:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
        }
        
        .right-section {
            width: 350px;
            background: white;
            position: relative;
            display: flex;
            flex-direction: column;
            box-shadow: -5px 0 20px rgba(0,0,0,0.1);
        }
        
        .menu-lateral {
            flex: 1;
            padding: 40px 30px;
            display: flex;
            flex-direction: column;
        }
        
        .menu-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .home-icon {
            font-size: 2.5rem;
            color: #0d6efd;
            cursor: pointer;
            transition: transform 0.3s ease;
        }
        
        .home-icon:hover {
            transform: scale(1.1);
        }
        
        .menu-items {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        
        .menu-item {
            text-decoration: none;
            color: #495057;
            font-weight: 500;
            padding: 15px 20px;
            border-radius: 10px;
            transition: all 0.3s ease;
            text-align: center;
        }
        
        .menu-item.active {
            background: linear-gradient(45deg, #0d6efd, #6610f2);
            color: white;
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
        }
        
        .menu-item:hover:not(.active) {
            background: #f8f9fa;
            color: #0d6efd;
        }
        
        .user-menu {
            margin-top: auto;
            text-align: center;
        }
        
        .user-icon {
            font-size: 2rem;
            color: #6c757d;
            margin-bottom: 20px;
        }
        
        .user-options {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .user-option {
            text-decoration: none;
            color: #6c757d;
            font-size: 0.8rem;
            font-weight: 500;
            padding: 8px 12px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .user-option:hover {
            background: #f8f9fa;
            color: #0d6efd;
        }
        
        .decorative-circle {
            position: absolute;
            right: -150px;
            top: 50%;
            transform: translateY(-50%);
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background: linear-gradient(45deg, #0d6efd, #6610f2);
            opacity: 0.1;
            z-index: -1;
        }
        
        .footer {
            background: white;
            padding: 20px 40px;
            border-top: 1px solid #e9ecef;
        }
        
        .footer-gradient {
            height: 4px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
            margin-bottom: 15px;
        }
        
        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.8rem;
            color: #6c757d;
        }
        
        .file-upload-area {
            border: 2px dashed #dee2e6;
            border-radius: 10px;
            padding: 30px;
            text-align: center;
            background: #f8f9fa;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .file-upload-area:hover {
            border-color: #0d6efd;
            background: #f0f8ff;
        }
        
        .file-upload-icon {
            font-size: 2.5rem;
            color: #6c757d;
            margin-bottom: 10px;
        }
        
        .file-upload-text {
            color: #6c757d;
            font-weight: 500;
        }
        
        #imageFile {
            display: none;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Seção principal com formulário -->
        <div class="left-section">
            <div class="doacao-card">
                <!-- Header com logo -->
                <div class="logo-section">
                    <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image" />
                    <h1 class="app-title">MedShare</h1>
                    <p class="app-subtitle">O compartilhamento é indicado em casos de suspeita de sobras</p>
                </div>
                
                <h2 class="page-title">DOAR</h2>
                

                <!-- Campo de busca de instituição -->
                <div class="mb-4 position-relative">
                    <input type="text" id="buscaInstituicao" class="form-control" placeholder="Digite o endereço ou nome da instituição..." autocomplete="off" />
                    <div id="listaInstituicoes" class="autocomplete-list" style="display:none;"></div>
                </div>

                <!-- Modal de doação -->
                <div class="modal fade" id="modalDoacao" tabindex="-1" aria-labelledby="modalDoacaoLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="modalDoacaoLabel">Fazer Doação</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="btnCancelarModal"></button>
                      </div>
                      <div class="modal-body">
                        <form id="formDoacao" asp-controller="Doacao" asp-action="Doar" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                            <input type="hidden" id="InstituicaoId" name="InstituicaoId" />
                            <div class="mb-3">
                                <label class="form-label">Instituição</label>
                                <input type="text" id="InstituicaoNome" class="form-control" disabled />
                            </div>
                            <div class="mb-3">
                                <input name="NomeMedicamento" type="text" class="form-control" placeholder="Nome do medicamento" required />
                            </div>
                            <div class="mb-3">
                                <input name="Validade" type="date" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <select name="FormaFarmaceutica" class="form-select" required>
                                    <option value="">Selecione a forma farmacêutica...</option>
                                    <option value="Comprimido">Comprimido</option>
                                    <option value="Cápsula">Cápsula</option>
                                    <option value="Xarope">Xarope</option>
                                    <option value="Pomada">Pomada</option>
                                    <option value="Injetável">Injetável</option>
                                    <option value="Gotas">Gotas</option>
                                    <option value="Spray">Spray</option>
                                    <option value="Outro">Outro</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <input name="Quantidade" type="number" class="form-control" placeholder="Quantidade" min="1" required />
                            </div>
                            <div class="mb-3">
                                <textarea name="Descricao" class="form-control" placeholder="Descrição/Comentário"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Imagem</label>
                                <input type="file" name="ImagemFile" class="form-control" accept="image/*" />
                            </div>
                            <div class="text-end">
                                <button type="button" class="btn btn-secondary me-2" id="btnCancelar">Cancelar</button>
                                <button type="submit" class="btn btn-success">Finalizar Doação</button>
                            </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Mensagem de sucesso -->
                <div id="mensagemSucesso" class="alert alert-success mt-4" style="display:none;"></div>
            </div>
        </div>
        
        <!-- Menu lateral direito -->
        <div class="right-section">
            <div class="menu-lateral">
                <!-- Ícone Home -->
                <div class="menu-header">
                    <a href="/Home" class="home-icon">
                        <i class="bi bi-house-fill"></i>
                    </a>
                </div>
                
                <!-- Menu Items -->
                <div class="menu-items">
                    <a href="/Doacao/Doar" class="menu-item active">
                        DOAR
                    </a>
                    <a href="/Doacao/BuscarInstituicoes" class="menu-item">
                        BUSCAR INSTITUIÇÕES
                    </a>
                    <a href="/Doacao/MinhasDoacoes" class="menu-item">
                        MINHAS DOAÇÕES
                    </a>
                </div>
                
                <!-- User Menu -->
                <div class="user-menu">
                    <div class="user-icon">
                        <i class="bi bi-person-fill"></i>
                    </div>
                    <div class="user-options">
                        <a href="/Admin/Notificacoes" class="user-option">
                            NOTIFICAÇÃO
                        </a>
                        <a href="/Admin/Chat" class="user-option">
                            CHAT
                        </a>
                        <a href="/Admin/Relatorio" class="user-option">
                            RELATÓRIO
                        </a>
                        <a href="/Admin/EditarPerfil" class="user-option">
                            EDITAR PERFIL
                        </a>
                        <a href="/Auth/Logout" class="user-option">
                            SAIR
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Elemento circular azul decorativo -->
            <div class="decorative-circle"></div>
        </div>
    </div>
    
    <!-- Footer -->
    <div class="footer">
        <div class="footer-gradient"></div>
        <div class="footer-content">
            <div class="footer-info">
                <i class="bi bi-geo-alt me-1"></i>Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil<br />
                <i class="bi bi-telephone me-1"></i>Telefone: (31) 3319-4444<br />
                <i class="bi bi-envelope me-1"></i>E-mail: contato@medshare.com
            </div>
            <div class="footer-about">
                <i class="bi bi-info-circle me-1"></i>
                <span>SOBRE NÓS</span>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .autocomplete-list {
            position: absolute;
            z-index: 1000;
            background: #fff;
            border: 1px solid #ccc;
            width: 100%;
            max-height: 200px;
            overflow-y: auto;
            border-radius: 0 0 8px 8px;
        }
        .autocomplete-item {
            padding: 10px;
            cursor: pointer;
        }
        .autocomplete-item:hover {
            background: #f0f0f0;
        }
    </style>
    <script>
        // Busca AJAX de instituições
        const buscaInput = document.getElementById('buscaInstituicao');
        const listaDiv = document.getElementById('listaInstituicoes');
        let timeout = null;
        buscaInput.addEventListener('input', function() {
            clearTimeout(timeout);
            const query = this.value;
            if (query.length < 2) {
                listaDiv.style.display = 'none';
                listaDiv.innerHTML = '';
                return;
            }
            timeout = setTimeout(() => {
                fetch(`/Doacao/BuscarInstituicoesAjax?query=${encodeURIComponent(query)}`)
                    .then(r => r.json())
                    .then(data => {
                        if (data.length === 0) {
                            listaDiv.innerHTML = '<div class="autocomplete-item">Nenhuma instituição encontrada</div>';
                        } else {
                            listaDiv.innerHTML = data.map(i => `<div class='autocomplete-item' data-id='${i.instituicaoId}' data-nome='${i.instituicaoNome}'>${i.instituicaoNome} <br><small>${i.instituicaoEndereco}</small></div>`).join('');
                        }
                        listaDiv.style.display = 'block';
                    });
            }, 300);
        });
        // Seleção da instituição na lista
        listaDiv.addEventListener('click', function(e) {
            const item = e.target.closest('.autocomplete-item');
            if (item && item.dataset.id) {
                document.getElementById('InstituicaoId').value = item.dataset.id;
                document.getElementById('InstituicaoNome').value = item.dataset.nome;
                listaDiv.style.display = 'none';
                buscaInput.value = '';
                // Abre o modal
                var modal = new bootstrap.Modal(document.getElementById('modalDoacao'));
                modal.show();
            }
        });
        // Cancelar modal
        document.getElementById('btnCancelar').onclick = function() {
            bootstrap.Modal.getInstance(document.getElementById('modalDoacao')).hide();
            document.getElementById('formDoacao').reset();
        };
        document.getElementById('btnCancelarModal').onclick = function() {
            document.getElementById('formDoacao').reset();
        };
        // Mensagem de sucesso após submit
        document.getElementById('formDoacao').onsubmit = function(e) {
            setTimeout(function() {
                document.getElementById('mensagemSucesso').innerText = 'Doação cadastrada com sucesso!';
                document.getElementById('mensagemSucesso').style.display = 'block';
                bootstrap.Modal.getInstance(document.getElementById('modalDoacao')).hide();
                document.getElementById('formDoacao').reset();
            }, 500);
        };
    </script>
</body>
</html>