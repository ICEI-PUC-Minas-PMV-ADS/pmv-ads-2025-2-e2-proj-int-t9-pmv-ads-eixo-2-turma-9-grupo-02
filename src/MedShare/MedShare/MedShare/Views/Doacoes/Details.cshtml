@model MedShare.Models.Doacao
@{
    ViewData["Title"] = "Detalhes da Doação - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        .form-control:disabled {
            background-color: #f8f9fa;
            color: #495057;
        }

        .form-label {
            font-weight: 500;
        }

        .section-title {
            color: #6c757d;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .btn-warning {
            background-color: #ffc107;
            border: none;
        }

            .btn-warning:hover {
                background-color: #e0a800;
            }

        .info-label {
            font-weight: 500;
            color: #495057;
        }

        .info-value {
            color: #212529;
            font-weight: 400;
        }
    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 800px; width: 100%;">

            <!-- Header -->
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">O compartilhamento é indicado em casos de escassez de sobras</p>
                <div class="badge bg-info fs-6 px-3 py-2 mt-2">
                    <i class="bi bi-eye-fill me-2"></i>DETALHES DA DOAÇÃO
                </div>
            </div>

            <!-- Informações da Doação -->
            <div class="mb-4">
                <h5 class="section-title"><i class="bi bi-capsule me-2"></i>Informações da Doação</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nome do Medicamento</label>
                        <input class="form-control" value="@Model.NomeDoacao" disabled />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Validade</label>
                        <input class="form-control" value="@(Model.ValidadeDoacao.HasValue? Model.ValidadeDoacao.Value.ToString("dd/MM/yyyy") : "-")" disabled />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Quantidade</label>
                        <input class="form-control" value="@Model.QuantidadeDoacao" disabled />
                    </div>
                </div>
            </div>

            <!-- Imagens -->
            <div class="mb-4">
                <h5 class="section-title"><i class="bi bi-image me-2"></i>Fotos e Arquivos</h5>
                <div class="row">
                    <div class="col-md-6 mb-3 text-center">
                        <label class="form-label">Foto do Medicamento</label><br />
                        @if (!string.IsNullOrEmpty(Model.CaminhoFoto))
                        {
                            <img src="@Model.CaminhoFoto" alt="Foto do Medicamento" class="rounded mt-2" style="max-width:200px; box-shadow:0 0 6px rgba(0,0,0,0.2);" />
                        }
                        else
                        {
                            <div class="text-muted small">Sem imagem</div>
                        }
                    </div>
                    <div class="col-md-6 mb-3 text-center">
                        <label class="form-label">Receita</label><br />
                        @if (!string.IsNullOrEmpty(Model.CaminhoReceita))
                        {
                            var extensao = System.IO.Path.GetExtension(Model.CaminhoReceita).ToLower();
                            if (extensao == ".pdf")
                            {
                                <a href="@Model.CaminhoReceita" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
                                    <i class="bi bi-file-earmark-pdf me-1"></i>Visualizar PDF
                                </a>
                            }
                            else
                            {
                                <a href="@Model.CaminhoReceita" target="_blank" title="Ampliar imagem">
                                    <img src="@Model.CaminhoReceita" alt="Receita Médica" class="rounded mt-2" style="max-width:200px; box-shadow:0 0 6px rgba(0,0,0,0.2);" />
                                </a>
                            }
                        }
                        else
                        {
                            <div class="text-muted small">Sem arquivo</div>
                        }
                    </div>
                </div>
            </div>

            <!-- Instituição -->
            <div class="mb-4">
                <h5 class="section-title"><i class="bi bi-hospital me-2"></i>Instituição</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nome</label>
                        <input class="form-control" value="@Model.Instituicao?.InstituicaoNome" disabled />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Endereço</label>
                        <input class="form-control" value="@Model.Instituicao?.InstituicaoEndereco" disabled />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Status</label>
                        <input class="form-control" value="@Model.Status" disabled />
                    </div>
                </div>
            </div>

            <!-- Botões -->
            <div class="row mt-4">
                <div class="col-md-4 mb-2">
                    <div class="d-grid">
                        <a asp-action="Index" class="btn btn-outline-primary btn-lg fw-bold">
                            <i class="bi bi-arrow-left-circle me-2"></i>VOLTAR
                        </a>
                    </div>
                </div>
                <div class="col-md-4 mb-2">
                    <div class="d-grid">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg fw-bold">
                            <i class="bi bi-pencil-square me-2"></i>EDITAR
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Rodapé -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>