@model IEnumerable<MedShare.Models.Doacao>

@{
    ViewData["Title"] = "Visualizar Doações - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        /* Tabela */
        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        /* BOTÕES */
        .btn-action {
            width: 34px;
            height: 34px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: none;
            padding: 0;
            margin: 0 3px;
            background: transparent !important;
            border-radius: 8px;
        }

        .icon-circle {
            width: 22px;
            height: 22px;
            border: 2px solid #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .icon-circle i {
                color: #fff !important;
                font-size: 0.9rem;
            }

        .btn-accept {
            background-color: #28a745 !important;
        }

            .btn-accept:hover {
                background-color: #218838 !important;
            }

        .btn-reject {
            background-color: #dc3545 !important;
        }

            .btn-reject:hover {
                background-color: #c82333 !important;
            }

        .btn-finish {
            background-color: #0d6efd !important;
        }

            .btn-finish:hover {
                background-color: #0b5ed7 !important;
            }

        .badge-custom {
            background: #0d6efd;
            color: #fff;
            font-size: 1rem;
            padding: 0.6em 1em;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }
    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 1200px; width: 100%;">

            <!-- Header -->
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">Gerencie e acompanhe suas doações de forma prática e segura!</p>
                <div class="badge-custom">
                    <i class="bi bi-box-seam"></i>
                    DOAÇÕES RECEBIDAS
                </div>
            </div>

            <!-- Botão Voltar -->
            <div class="mb-3">
                <a asp-controller="Home" asp-action="HomePageInstituicao" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                </a>
            </div>

            <!-- Tabela -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle text-center">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NomeDoacao)</th>
                            <th>@Html.DisplayNameFor(model => model.ValidadeDoacao)</th>
                            <th>@Html.DisplayNameFor(model => model.QuantidadeDoacao)</th>
                            <th>Foto</th>
                            <th>Receita</th>
                            <th>Doador</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.Id))
                        {
                            <tr>
                                <td>@item.NomeDoacao</td>
                                <td>@(item.ValidadeDoacao?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td>@item.QuantidadeDoacao</td>

                                <!-- Foto -->
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CaminhoFoto))
                                    {
                                        <img src="@item.CaminhoFoto" alt="Foto do Medicamento"
                                             style="max-width:80px; border-radius:8px; box-shadow:0 0 4px rgba(0,0,0,0.2);" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem imagem</span>
                                    }
                                </td>

                                <!-- Receita -->
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CaminhoReceita))
                                    {
                                        <a href="@item.CaminhoReceita" target="_blank" class="btn btn-outline-primary btn-sm">Ver Receita</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem arquivo</span>
                                    }
                                </td>

                                <!-- Doador -->
                                <td>
                                    @item.Doador?.DoadorNome <br />
                                    <small>@item.Doador?.DoadorEmail</small>
                                </td>

                                <!-- Status -->
                                <td>
                                    @switch (item.Status)
                                    {
                                        case MedShare.Models.StatusDoacao.Pendente:
                                            <span class="badge bg-warning text-dark">Pendente</span>
                                            break;
                                        case MedShare.Models.StatusDoacao.Aprovado:
                                            <span class="badge bg-success">Aprovado</span>
                                            break;
                                        case MedShare.Models.StatusDoacao.Rejeitado:
                                            <span class="badge bg-danger">Rejeitado</span>
                                            break;
                                        case MedShare.Models.StatusDoacao.Finalizado:
                                            <span class="badge bg-primary">Finalizado</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">Desconhecido</span>
                                            break;
                                    }
                                </td>

                                <!-- AÇÕES -->
                                <td>
                                    @if (item.Status == MedShare.Models.StatusDoacao.Pendente)
                                    {
                                        <form asp-action="AlterarStatus" method="post" style="display:inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="novoStatus" value="1" />
                                            <button type="submit" class="btn-action btn-accept">
                                                <span class="icon-circle">
                                                    <i class="bi bi-check-lg"></i>
                                                </span>
                                            </button>
                                        </form>

                                        <form asp-action="AlterarStatus" method="post" style="display:inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="novoStatus" value="2" />
                                            <button type="submit" class="btn-action btn-reject">
                                                <span class="icon-circle">
                                                    <i class="bi bi-x-lg"></i>
                                                </span>
                                            </button>
                                        </form>
                                    }
                                    else if (item.Status == MedShare.Models.StatusDoacao.Aprovado)
                                    {
                                        <form asp-action="AlterarStatus" method="post" style="display:inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="novoStatus" value="3" />
                                            <button type="submit" class="btn-action btn-finish">
                                                <span class="icon-circle">
                                                    <i class="bi bi-check-lg"></i>
                                                </span>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <!-- Rodapé -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
