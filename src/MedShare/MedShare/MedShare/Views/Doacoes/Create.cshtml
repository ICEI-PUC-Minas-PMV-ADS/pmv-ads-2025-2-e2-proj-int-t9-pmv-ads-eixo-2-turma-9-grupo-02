@model MedShare.Models.Doacao

@{
    ViewData["Title"] = "Create";
}

<h1>Nova doação</h1>

<h4>Cadastrar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomeDoacao" class="control-label"></label>
                <input asp-for="NomeDoacao" class="form-control" />
                <span asp-validation-for="NomeDoacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValidadeDoacao" class="control-label"></label>
                <input asp-for="ValidadeDoacao" class="form-control" />
                <span asp-validation-for="ValidadeDoacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantidadeDoacao" class="control-label"></label>
                <input asp-for="QuantidadeDoacao" class="form-control" />
                <span asp-validation-for="QuantidadeDoacao" class="text-danger"></span>

                <div class="mt-2">
                    <input type="radio" id="caixa" name="unidade" value="Caixa" checked />
                    <label for="caixa">Caixa</label>

                    <input type="radio" id="cartela" name="unidade" value="Cartela" class="ms-3" />
                    <label for="cartela">Cartela</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FotoDoacao" class="control-label"></label>
                <input asp-for="FotoDoacao" type="file" accept="image/*" class="form-control" id="fotoInput" />
                <span asp-validation-for="FotoDoacao" class="text-danger"></span>
                <div class="mt-2">
                    <img id="fotoPreview" src="#" alt="Preview da Foto" style="display:none; width:120px; height:120px; object-fit:cover; border-radius:6px;" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ReceitaDoacao" class="control-label"></label>
                <input asp-for="ReceitaDoacao" type="file" accept="image/*,.pdf" class="form-control" id="receitaInput" />
                <span asp-validation-for="ReceitaDoacao" class="text-danger"></span>
                <div class="mt-2">
                    <img id="receitaPreview" src="#" alt="Preview da Receita" style="display:none; width:120px; height:120px; object-fit:cover; border-radius:6px;" />
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>

        <div class="mt-2">
            <a asp-action="Index" class="btn btn-outline-primary">Voltar</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('fotoInput').addEventListener('change', function (e) {
            const preview = document.getElementById('fotoPreview');
            const file = e.target.files[0];
            if (file && file.type.startsWith('image/')) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = 'block';
            } else {
                preview.src = '#';
                preview.style.display = 'none';
            }
        });

        document.getElementById('receitaInput').addEventListener('change', function (e) {
            const preview = document.getElementById('receitaPreview');
            const file = e.target.files[0];

            // Se for imagem, mostra a prévia; se for PDF, mostra um ícone
            if (file) {
                if (file.type.startsWith('image/')) {
                    preview.src = URL.createObjectURL(file);
                    preview.style.display = 'block';
                } else if (file.type === 'application/pdf') {
                    preview.src = '/images/pdf-icon.png'; // coloque um ícone de PDF na pasta wwwroot/images
                    preview.style.display = 'block';
                } else {
                    preview.src = '#';
                    preview.style.display = 'none';
                }
            } else {
                preview.src = '#';
                preview.style.display = 'none';
            }
        });
    </script>
}