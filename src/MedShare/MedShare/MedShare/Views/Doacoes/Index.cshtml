@model IEnumerable<MedShare.Models.Doacao>

@{
    ViewData["Title"] = "Minhas Doações - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        /* Tabela */
        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table-bordered > :not(caption) > * {
            border-color: #dee2e6;
            border-radius: 10px
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        /* Botão verde */
        .btn-success {
            background-color: #198754;
            border: none;
        }

            .btn-success:hover {
                background-color: #157347;
            }

        .badge-custom {
            background: #0d6efd;
            color: #fff;
            font-size: 1rem;
            padding: 0.6em 1em;
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        /* Tabela */
        table.table {
            font-size: 0.95rem;
            border: 1px solid #dee2e6;
        }

            table.table td, table.table th {
                vertical-align: middle;
                border: 1px solid #dee2e6;
            }

        /* Ícones nos botões */
        .btn i {
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 1100px; width: 100%;">

            <!-- Header -->
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">Gerencie e acompanhe suas doações de forma prática e segura!</p>
                <div class="badge-custom">
                    <i class="bi bi-box-seam"></i>
                    MINHAS DOAÇÕES
                </div>
            </div>

            <!-- Botão de nova doação -->
            <div class="d-flex justify-content-end mb-4">
                <a asp-action="Create" class="btn btn-success btn-lg fw-bold">
                    <i class="bi bi-plus-circle me-2"></i>NOVA DOAÇÃO
                </a>
            </div>

            <!-- Tabela de doações -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle text-center">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NomeDoacao)</th>
                            <th>@Html.DisplayNameFor(model => model.ValidadeDoacao)</th>
                            <th>@Html.DisplayNameFor(model => model.QuantidadeDoacao)</th>
                            <th>Foto</th>
                            <th>Receita</th>
                            <th>Instituição</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NomeDoacao</td>
                                <td>@(item.ValidadeDoacao.HasValue? item.ValidadeDoacao.Value.ToString("dd/MM/yyyy") : "-")</td>
                                <td>@item.QuantidadeDoacao</td>

                                <!-- Foto -->
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CaminhoFoto))
                                    {
                                        <img src="@item.CaminhoFoto" alt="Foto do Medicamento"
                                             style="max-width:80px; border-radius:8px; box-shadow:0 0 4px rgba(0,0,0,0.2);" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem imagem</span>
                                    }
                                </td>

                                <!-- Receita -->
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CaminhoReceita))
                                    {
                                        var extensao = System.IO.Path.GetExtension(item.CaminhoReceita).ToLower();

                                        if (extensao == ".pdf")
                                        {
                                            <a href="@item.CaminhoReceita" target="_blank" class="btn btn-outline-primary btn-sm">
                                                Visualizar PDF
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@item.CaminhoReceita" target="_blank" title="Ampliar imagem">
                                                <img src="@item.CaminhoReceita" alt="Receita Médica"
                                                     style="max-width:80px; border-radius:8px; box-shadow:0 0 4px rgba(0,0,0,0.2);" />
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem arquivo</span>
                                    }
                                </td>

                                <!-- Instituição -->
                                <td>
                                    <div class="fw-semibold">@item.Instituicao?.InstituicaoNome</div>
                                    <div class="small text-muted">@item.Instituicao?.InstituicaoEndereco</div>
                                </td>

                                <td>
                                    <span class="badge bg-secondary">@item.Status</span>
                                </td>

                                <!-- Botões -->
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Ver detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Cancelar doação">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <!-- Rodapé -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

