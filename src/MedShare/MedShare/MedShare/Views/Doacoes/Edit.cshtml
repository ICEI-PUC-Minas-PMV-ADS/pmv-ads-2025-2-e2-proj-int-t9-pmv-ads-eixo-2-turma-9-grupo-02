@model MedShare.Models.Doacao
@{
    ViewData["Title"] = "Editar Doação - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }

        .form-floating .form-control:focus,
        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        .form-label {
            font-weight: 500;
        }

        .btn-success {
            background-color: #28a745; 
            border: none;
        }

            .btn-success:hover {
                background-color: #218838;
            }

    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 800px; width: 100%;">

            <!-- Header -->
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">O compartilhamento é indicado em casos de escassez de sobras</p>
                <div class="badge bg-warning fs-6 px-3 py-2 mt-2">
                    <i class="bi bi-pencil-square me-2"></i>EDITAR DOAÇÃO
                </div>
            </div>

            <!-- Formulário -->
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-capsule me-2"></i>Informações da Doação</h5>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="NomeDoacao" class="form-label"></label>
                        <input asp-for="NomeDoacao" class="form-control" required />
                        <span asp-validation-for="NomeDoacao" class="invalid-feedback"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ValidadeDoacao" class="form-label"></label>
                        <input asp-for="ValidadeDoacao" type="date" class="form-control" required />
                        <span asp-validation-for="ValidadeDoacao" class="invalid-feedback"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="QuantidadeDoacao" class="form-label"></label>
                        <input asp-for="QuantidadeDoacao" class="form-control" required />
                        <span asp-validation-for="QuantidadeDoacao" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Upload da Foto -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-image me-2"></i>Foto da caixa do medicamento</h5>
                        <input asp-for="FotoDoacao" type="file" class="form-control" accept="image/*" onchange="previewImage(event, 'previewFoto')" />
                        <span asp-validation-for="FotoDoacao" class="text-danger"></span>

                        <img id="previewFoto" src="@Url.Content(Model.CaminhoFoto ?? "#")" alt="Prévia da imagem"
                             class="rounded mt-3"
                             style="display:@(string.IsNullOrEmpty(Model.CaminhoFoto) ? "none" : "block"); max-width:200px;" />
                    </div>
                </div>

                <!-- Upload da Receita -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-file-earmark-medical me-2"></i>Receita</h5>
                        <input asp-for="ReceitaDoacao" type="file" class="form-control" accept="image/*,.pdf" onchange="previewFile(event, 'previewReceita', 'linkReceita')" />
                        <span asp-validation-for="ReceitaDoacao" class="text-danger"></span>

                        <img id="previewReceita" src="@((Model.CaminhoReceita != null && !Model.CaminhoReceita.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) ? Url.Content(Model.CaminhoReceita) : "#")"
                             alt="Prévia da receita"
                             class="rounded mt-3"
                             style='display:@((Model.CaminhoReceita != null && !Model.CaminhoReceita.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) ? "block" : "none"); max-width:200px;' />

                        <a id="linkReceita" href="@((Model.CaminhoReceita != null && Model.CaminhoReceita.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) ? Url.Content(Model.CaminhoReceita) : "#")"
                           target="_blank"
                           class="btn btn-outline-primary btn-sm mt-3"
                           style="display:@((Model.CaminhoReceita != null && Model.CaminhoReceita.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) ? "block" : "none");">
                            Visualizar PDF
                        </a>
                    </div>
                </div>

                <!-- Instituição -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-hospital me-2"></i>Instituição</h5>
                        <select asp-for="InstituicaoId" class="form-select" required>
                            <option value="">Selecione uma instituição</option>
                            @foreach (var inst in ViewBag.Instituicoes)
                            {
                                if (Model?.InstituicaoId == inst.InstituicaoId)
                                {
                                    <option value="@inst.InstituicaoId" selected>
                                        @inst.InstituicaoNome - @inst.InstituicaoEndereco
                                    </option>
                                }
                                else
                                {
                                    <option value="@inst.InstituicaoId">
                                        @inst.InstituicaoNome - @inst.InstituicaoEndereco
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="InstituicaoId" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Status -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label"></label>
                        <input class="form-control" value="@Model.Status.ToString()" readonly disabled />
                    </div>
                </div>

                <!-- Botões -->
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <div class="d-grid">
                            <a asp-action="Index" class="btn btn-outline-primary btn-lg fw-bold">
                                <i class="bi bi-arrow-left-circle me-2"></i>VOLTAR
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg fw-bold">
                                <i class="bi bi-save me-2"></i>SALVAR
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Rodapé -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validação Bootstrap
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Preview da imagem
        function previewImage(event, previewId) {
            const input = event.target;
            const preview = document.getElementById(previewId);
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Preview da receita (imagem ou PDF)
        function previewFile(event, imgId, linkId) {
            const file = event.target.files[0];
            const imgPreview = document.getElementById(imgId);
            const linkPreview = document.getElementById(linkId);
            if (!file) return;

            if (file.type === "application/pdf") {
                imgPreview.style.display = 'none';
                linkPreview.style.display = 'block';
                linkPreview.href = URL.createObjectURL(file);
            } else if (file.type.startsWith("image/")) {
                linkPreview.style.display = 'none';
                const reader = new FileReader();
                reader.onload = e => {
                    imgPreview.src = e.target.result;
                    imgPreview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                imgPreview.style.display = 'none';
                linkPreview.style.display = 'none';
                alert("Tipo de arquivo não suportado. Envie uma imagem ou PDF.");
            }
        }
    </script>
</body>
</html>