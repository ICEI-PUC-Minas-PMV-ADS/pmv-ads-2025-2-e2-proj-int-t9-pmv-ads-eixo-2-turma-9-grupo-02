@model MedShare.Models.Doacao

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Doação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CaminhoFoto" />
            <input type="hidden" asp-for="CaminhoReceita" />

            <div class="form-group">
                <label asp-for="NomeDoacao" class="control-label"></label>
                <input asp-for="NomeDoacao" class="form-control" />
                <span asp-validation-for="NomeDoacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValidadeDoacao" class="control-label"></label>
                <input asp-for="ValidadeDoacao" class="form-control" />
                <span asp-validation-for="ValidadeDoacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantidadeDoacao" class="control-label"></label>
                <input asp-for="QuantidadeDoacao" class="form-control" />
                <span asp-validation-for="QuantidadeDoacao" class="text-danger"></span>

                <div class="mt-2">
                    <input type="radio" id="caixa" name="unidade" value="Caixa" checked />
                    <label for="caixa">Caixa</label>

                    <input type="radio" id="cartela" name="unidade" value="Cartela" class="ms-3" />
                    <label for="cartela">Cartela</label>
                </div>
            </div>

            <div class="form-group">
                <label>Foto da Doação</label>
                <input type="file" name="FotoDoacao" accept="image/*" class="form-control" id="fotoInput" />
                <span asp-validation-for="FotoDoacao" class="text-danger"></span>

                <div class="mt-2">
                    <img id="fotoPreview"
                         src="@(Model.CaminhoFoto != null ? Url.Content(Model.CaminhoFoto) : "#")"
                         alt="Foto da Doação"
                         style="@(Model.CaminhoFoto != null ? "display:block;" : "display:none;") width:120px; height:120px; object-fit:cover; border-radius:6px; border:1px solid #ccc;" />
                </div>
            </div>

            <div class="form-group">
                <label>Receita da Doação</label>
                <input type="file" name="ReceitaDoacao" accept="image/*,.pdf" class="form-control" id="receitaInput" />
                <span asp-validation-for="ReceitaDoacao" class="text-danger"></span>

                <div class="mt-2">
                    @if (Model.CaminhoReceita != null)
                    {
                        <img id="receitaPreview"
                             src="@Url.Content(Model.CaminhoReceita)"
                             alt="Receita da Doação"
                             style="display:block; width:120px; height:120px; object-fit:cover; border-radius:6px; border:1px solid #ccc;" />
                    }
                    else
                    {
                        <img id="receitaPreview"
                             src="#"
                             alt="Preview da Receita"
                             style="display:none; width:120px; height:120px; object-fit:cover; border-radius:6px; border:1px solid #ccc;" />
                    }
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar alterações" class="btn btn-success" />
            </div>
        </form>

        <div class="mt-2">
            <a asp-action="Index" class="btn btn-outline-primary">Voltar</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('fotoInput').addEventListener('change', function (e) {
            const preview = document.getElementById('fotoPreview');
            const file = e.target.files[0];
            if (file && file.type.startsWith('image/')) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = 'block';
            } else {
                preview.src = '#';
                preview.style.display = 'none';
            }
        });

        document.getElementById('receitaInput').addEventListener('change', function (e) {
            const preview = document.getElementById('receitaPreview');
            const file = e.target.files[0];
            if (file && file.type.startsWith('image/')) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = 'block';
            } else {
                preview.src = '#';
                preview.style.display = 'none';
            }
        });
    </script>
}