@model MedShare.Models.Doacao
@{
    ViewData["Title"] = "Editar Doação - MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .cadastro-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }

        .app-title {
            color: #0d6efd;
            font-weight: 700;
        }

        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        /* estilos para manter a sensação nativa do input dentro do box */
        .file-input-group .btn {
            min-width: 170px;
            white-space: nowrap;
        }

        .file-input-group .form-control[readonly] {
            background-color: #fff;
        }
    </style>
</head>

<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="cadastro-card p-5" style="max-width: 800px; width: 100%;">

            <!-- Header -->
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                <h1 class="app-title h2 mb-2">MedShare</h1>
                <p class="text-muted small">O compartilhamento é indicado em casos de escassez de sobras</p>
                <div class="badge bg-warning fs-6 px-3 py-2 mt-2">
                    <i class="bi bi-pencil-square me-2"></i>EDITAR DOAÇÃO
                </div>
            </div>

            <!-- Formulário -->
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-capsule me-2"></i>Informações da Doação</h5>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="NomeDoacao" class="form-label"></label>
                        <input asp-for="NomeDoacao" class="form-control" required />
                        <span asp-validation-for="NomeDoacao" class="invalid-feedback"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ValidadeDoacao" class="form-label"></label>
                        <input asp-for="ValidadeDoacao" type="date" class="form-control" required />
                        <span asp-validation-for="ValidadeDoacao" class="invalid-feedback"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="QuantidadeDoacao" class="form-label"></label>
                        <input asp-for="QuantidadeDoacao" class="form-control" required />
                        <span asp-validation-for="QuantidadeDoacao" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Upload da Foto -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-image me-2"></i>Foto da caixa do medicamento</h5>

                        <div class="input-group file-input-group">
                            <button type="button" id="fotoBtn" class="btn btn-outline-secondary">
                                Escolher um novo arquivo
                            </button>
                            <input type="text" id="fotoFileName" class="form-control" readonly
                                   value="@(string.IsNullOrEmpty(Model.CaminhoFoto) ? "Nenhum arquivo escolhido" : System.IO.Path.GetFileName(Model.CaminhoFoto))" />
                        </div>

                        <input asp-for="FotoDoacao" type="file" id="fotoInput" accept="image/*" style="display:none"
                               onchange="handleFotoChange(event)" />

                        <span asp-validation-for="FotoDoacao" class="text-danger"></span>

                        <img id="previewFoto"
                             src="@Url.Content(Model.CaminhoFoto ?? "#")"
                             alt="Prévia da imagem"
                             class="rounded mt-3"
                             style="display:@(string.IsNullOrEmpty(Model.CaminhoFoto) ? "none" : "block"); max-width:200px;" />
                    </div>
                </div>

                <!-- Upload da Receita -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-file-earmark-medical me-2"></i>Receita</h5>

                        <div class="input-group file-input-group">
                            <button type="button" id="receitaBtn" class="btn btn-outline-secondary">
                                Escolher um novo arquivo
                            </button>
                            <input type="text" id="receitaFileName" class="form-control" readonly
                                   value="@(string.IsNullOrEmpty(Model.CaminhoReceita) ? "Nenhum arquivo escolhido" : System.IO.Path.GetFileName(Model.CaminhoReceita))" />
                        </div>

                        <input asp-for="ReceitaDoacao" type="file" id="receitaInput" accept="image/*,.pdf" style="display:none"
                               onchange="handleReceitaChange(event)" />

                        <span asp-validation-for="ReceitaDoacao" class="text-danger"></span>

                        <img id="previewReceita"
                             src="@((Model.CaminhoReceita != null && !Model.CaminhoReceita.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) ? Url.Content(Model.CaminhoReceita) : "#")"
                             alt="Prévia da receita"
                             class="rounded mt-3"
                             style='display:@((Model.CaminhoReceita != null && !Model.CaminhoReceita.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) ? "block" : "none"); max-width:200px;' />

                        <a id="linkReceita"
                           href="@((Model.CaminhoReceita != null && Model.CaminhoReceita.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) ? Url.Content(Model.CaminhoReceita) : "#")"
                           target="_blank"
                           class="btn btn-outline-primary btn-sm mt-3"
                           style="display:@((Model.CaminhoReceita != null && Model.CaminhoReceita.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase)) ? "block" : "none");">
                            Visualizar PDF
                        </a>
                    </div>
                </div>

                <!-- Instituição -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-muted mb-3"><i class="bi bi-hospital me-2"></i>Instituição</h5>
                        <select asp-for="InstituicaoId" class="form-select" required>
                            <option value="">Selecione uma instituição</option>
                            @foreach (var inst in ViewBag.Instituicoes)
                            {
                                if (Model?.InstituicaoId == inst.InstituicaoId)
                                {
                                    <option value="@inst.InstituicaoId" selected="selected">
                                        @inst.InstituicaoNome - @inst.InstituicaoEndereco
                                    </option>
                                }
                                else
                                {
                                    <option value="@inst.InstituicaoId">
                                        @inst.InstituicaoNome - @inst.InstituicaoEndereco
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="InstituicaoId" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Status -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label"></label>
                        <input class="form-control" value="@Model.Status.ToString()" readonly disabled />
                    </div>
                </div>

                <!-- Botões -->
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <div class="d-grid">
                            <a asp-action="Index" class="btn btn-outline-primary btn-lg fw-bold">
                                <i class="bi bi-arrow-left-circle me-2"></i>VOLTAR
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg fw-bold">
                                <i class="bi bi-save me-2"></i>SALVAR
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Rodapé -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 - Belo Horizonte - MG</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Conecta botão visual ao input file escondido e atualiza o campo nome dentro do box
        document.addEventListener("DOMContentLoaded", function () {

            // FOTO
            const fotoBtn = document.getElementById("fotoBtn");
            const fotoInput = document.getElementById("fotoInput");
            const fotoFileName = document.getElementById("fotoFileName");
            if (fotoBtn && fotoInput && fotoFileName) {
                fotoBtn.addEventListener("click", () => fotoInput.click());
            }

            // RECEITA
            const receitaBtn = document.getElementById("receitaBtn");
            const receitaInput = document.getElementById("receitaInput");
            const receitaFileName = document.getElementById("receitaFileName");
            if (receitaBtn && receitaInput && receitaFileName) {
                receitaBtn.addEventListener("click", () => receitaInput.click());
            }
        });

        // Quando um arquivo de foto é escolhido: atualiza o campo com o nome e mostra preview
        function handleFotoChange(event) {
            const input = event.target;
            const file = input.files && input.files[0];
            const fileNameField = document.getElementById("fotoFileName");
            const preview = document.getElementById("previewFoto");

            if (file) {
                fileNameField.value = file.name;

                // mostra preview da imagem
                if (file.type.startsWith("image/")) {
                    const reader = new FileReader();
                    reader.onload = e => {
                        preview.src = e.target.result;
                        preview.style.display = "block";
                    };
                    reader.readAsDataURL(file);
                } else {
                    preview.style.display = "none";
                }
            } else {
                // nenhum arquivo selecionado: volta ao valor padrão (caso exista nome salvo no servidor ele permanece)
                const fallback = "@(string.IsNullOrEmpty(Model.CaminhoFoto) ? "Nenhum arquivo escolhido" : System.IO.Path.GetFileName(Model.CaminhoFoto))";
                fileNameField.value = fallback;
            }
        }

        // Quando um arquivo de receita é escolhido: atualiza o campo com o nome e mostra preview ou link
        function handleReceitaChange(event) {
            const input = event.target;
            const file = input.files && input.files[0];
            const fileNameField = document.getElementById("receitaFileName");
            const previewImg = document.getElementById("previewReceita");
            const linkReceita = document.getElementById("linkReceita");

            if (file) {
                fileNameField.value = file.name;

                if (file.type === "application/pdf") {
                    // mostra link de visualização
                    previewImg.style.display = "none";
                    linkReceita.style.display = "block";
                    linkReceita.href = URL.createObjectURL(file);
                } else if (file.type.startsWith("image/")) {
                    linkReceita.style.display = "none";
                    const reader = new FileReader();
                    reader.onload = e => {
                        previewImg.src = e.target.result;
                        previewImg.style.display = "block";
                    };
                    reader.readAsDataURL(file);
                } else {
                    previewImg.style.display = "none";
                    linkReceita.style.display = "none";
                }
            } else {
                // fallback para o valor salvo no servidor
                const fallback = "@(string.IsNullOrEmpty(Model.CaminhoReceita) ? "Nenhum arquivo escolhido" : System.IO.Path.GetFileName(Model.CaminhoReceita))";
                fileNameField.value = fallback;
            }
        }

        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.forEach.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>