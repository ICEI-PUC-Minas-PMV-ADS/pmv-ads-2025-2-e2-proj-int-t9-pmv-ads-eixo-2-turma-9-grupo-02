@page
@model HomeModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home - MedShare</title>
    <link rel="stylesheet" href="~/Home/home.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="logo-title">
            <img src="~/images/logo-medshare.png" alt="MedShare Logo" class="logo" />
            <h1>MedShare</h1>
            <p class="subtitle">O compartilhamento é indicado em casos de suspeita de sobras</p>
        </div>
        <div class="stats">
            <div class="card card-green">
                <div class="card-value">13</div>
                <div class="card-label">TOTAL DE MEDICAMENTOS DOADOS</div>
            </div>
            <div class="card card-blue">
                <div class="card-value">3</div>
                <div class="card-label">MEDICAMENTOS DISPONÍVEIS PARA DOAÇÃO</div>
            </div>
            <div class="card card-yellow">
                <div class="card-value">1</div>
                <div class="card-label">MEDICAMENTOS PENDENTES</div>
            </div>
        </div>
        <div class="menu-circle">
            <div class="menu-content">
                <a href="/Doar">DOAR</a>
                <hr />
                <a href="/BuscarInstituicoes">BUSCAR INSTITUIÇÕES</a>
                <hr />
                <a href="/MinhasDoacoes">MINHAS DOAÇÕES</a>
                <hr />
                <div class="profile">
                    <img src="~/images/profile-icon.png" alt="Perfil" />
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="footer-content">
            <span><img src="~/images/pin.png" alt="Endereço" /> Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil</span><br />
            <span><img src="~/images/phone.png" alt="Telefone" /> Telefone: (31) 3319-4444</span><br />
            <span><img src="~/images/email.png" alt="Email" /> E-mail: contato@medshare.com</span>
        </div>
        <div class="footer-about">
            <img src="~/images/about-icon.png" alt="Sobre nós" />
            <span>SOBRE NÓS</span>
        </div>
    </footer>
</body>
</html>
