@page
@model EscolhaUsuarioModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Escolha Usuário - MedShare</title>
    <link rel="stylesheet" href="~/EscolhaUsuario/escolha-usuario.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="logo-title">
            <img src="~/images/logo-medshare.png" alt="MedShare Logo" class="logo" />
            <h1>MedShare</h1>
            <p class="subtitle">O compartilhamento é indicado em casos de suspeita de sobras</p>
        </div>
        <div class="escolha-form">
            <div class="row justify-content-center mb-4">
                <div class="col-12 col-md-4 d-flex justify-content-center">
                    <a href="/Login" class="card-btn">
                        SOU PESSOA FÍSICA-CPF
                    </a>
                </div>
                <div class="col-12 col-md-4 d-flex justify-content-center">
                    <a href="/Login" class="card-btn">
                        SOU PESSOA JURÍDICA-CNPJ
                    </a>
                </div>
            </div>
            <div class="buttons">
                <button type="button" class="google-btn">
                    <img src="~/images/google-icon.png" alt="Google" />
                </button>
                <a href="/Login" class="entrar-btn">ENTRAR</a>
            </div>
            <a href="/RecuperarSenha" class="forgot">ESQUECI MINHA SENHA</a>
        </div>
        <div class="meds-img">
            <img src="~/images/medicamentos.png" alt="Medicamentos" />
        </div>
    </div>
    <footer>
        <div class="footer-content">
            <span><img src="~/images/pin.png" alt="Endereço" /> Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil</span><br />
            <span><img src="~/images/phone.png" alt="Telefone" /> Telefone: (31) 3319-4444</span><br />
            <span><img src="~/images/email.png" alt="Email" /> E-mail: contato@medshare.com</span>
        </div>
        <div class="footer-about">
            <img src="~/images/about-icon.png" alt="Sobre nós" />
            <span>SOBRE NÓS</span>
        </div>
    </footer>
</body>
</html>
