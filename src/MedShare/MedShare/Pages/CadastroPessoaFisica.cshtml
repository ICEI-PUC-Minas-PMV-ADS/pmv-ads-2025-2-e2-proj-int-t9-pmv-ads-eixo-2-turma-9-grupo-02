@page
@model CadastroPessoaFisicaModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cadastro Pessoa Física - MedShare</title>
    <link rel="stylesheet" href="~/CadastroPessoaFisica/cadastro-pf.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="logo-title">
            <img src="~/images/logo-medshare.png" alt="MedShare Logo" class="logo" />
            <h1>MedShare</h1>
            <p class="subtitle">O compartilhamento é indicado em casos de suspeita de sobras</p>
        </div>
        <h2 class="form-title">PESSOA FÍSICA</h2>
        <div class="cadastro-form">
            <form method="post">
                <input asp-for="NomeCompleto" type="text" placeholder="NOME COMPLETO" required />
                <input asp-for="CPF" type="text" placeholder="CPF" required />
                <input asp-for="Email" type="email" placeholder="EMAIL" required />
                <input asp-for="CEP" type="text" placeholder="CEP" required />
                <input asp-for="Endereco" type="text" placeholder="ENDEREÇO" required />
                <div class="termos">
                    <input asp-for="AceitarTermos" type="checkbox" id="termosFisica" required />
                    <label for="termosFisica">Aceitar termos de uso</label>
                </div>
                <div class="buttons">
                    <button type="submit" class="salvar-btn">SALVAR</button>
                    <a href="/Login" class="entrar-btn">ENTRAR</a>
                </div>
            </form>
        </div>
        <div class="meds-img">
            <img src="~/images/medicamentos.png" alt="Medicamentos" />
        </div>
    </div>
    <footer>
        <div class="footer-content">
            <span><img src="~/images/pin.png" alt="Endereço" /> Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil</span><br />
            <span><img src="~/images/phone.png" alt="Telefone" /> Telefone: (31) 3319-4444</span><br />
            <span><img src="~/images/email.png" alt="Email" /> E-mail: contato@medshare.com</span>
        </div>
        <div class="footer-about">
            <img src="~/images/about-icon.png" alt="Sobre nós" />
            <span>SOBRE NÓS</span>
        </div>
    </footer>
</body>
</html>
